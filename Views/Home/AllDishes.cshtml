@{
    ViewData["Title"] = "All Dishes";
}

<div class="row mt-3">
    <div class="col-6 text-right border-right">
        <h1 class="display-4"><a href="/">Chefs</a></h1>
    </div>
    <div class="d-flex col-6 justify-content-between align-items-center border-left">
        <h1 class="display-4">Dishes</h1>
        <a href="/dishes/new">Add a Dish</a>
    </div>
</div>
<h2>Yum, take a look at our tasty dishes!</h2>
<hr>
<div class="tableFixHead">
    <table class="table table-striped table-borderless">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish d in ViewBag.AllDishes)
            {
                <tr>
                    <td>@d.DishName</td>
                    <td>@d.Creator.FirstName @d.Creator.LastName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.Calories</td>
                </tr>
            }
        </tbody>
    </table>
</div>

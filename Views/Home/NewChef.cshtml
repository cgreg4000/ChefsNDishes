@{
    ViewData["Title"] = "Add a Chef";
}
@model Chef

<h1 class="display-4 text-center mt-3">Add a Chef!</h1>
<a href="/">Home</a>
<form class="text-center" action="/chefs/create" method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName">
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName">
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label for="DOB">Date of Birth</label>
        <input class="form-control" asp-for="DOB">
        <span class="text-danger" asp-validation-for="DOB"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Add Chef">
</form>